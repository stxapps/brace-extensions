{
  "manifest_version": 2,
  "name": "Brace",
  "description": "Save links to visit later easily, anytime, on any device, with technology that empowers you to truly own your account and data.",
  "version": "0.1.3",
  "icons": {
    "16": "img/logo16.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "permissions": ["storage", "activeTab", "management"],
  "browser_action": {
    "default_icon": {
      "16": "img/logo16.png",
      "32": "img/logo32.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
    },
    "default_title": "Save link to Brace"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@brace.to"
    }
  }
}
