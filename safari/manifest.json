{
  "manifest_version": 3,
  "name": "Brace.to - Bookmark Manager",
  "description": "Save links to visit later easily, anytime, on any device, with technology that empowers you to truly own your account and data.",
  "version": "0.0.0",
  "icons": {
    "16": "img/logo16.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "permissions": ["storage", "activeTab", "management"],
  "action": {
    "default_icon": {
      "any": "img/logo-safari.svg"
    },
    "default_title": "Save link to Brace"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "options_ui": {
    "page": "options.html"
  }
}
